name: Fix MoveOnJoy Streams

# Allows manual trigger
on:
  workflow_dispatch:

jobs:
  fix_streams:
    runs-on: ubuntu-latest

    steps:
      # Checkout repository
      - name: Checkout code
        uses: actions/checkout@v3

      # Setup Python
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      # Install dependencies
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install aiohttp

      # Run the script
      - name: Run MoveOnJoy fixer
        run: python scripts/MoveOnJoy Update.py